<p id="notice"><%= notice %></p>

<p>テンプレートを投稿する</p>
<%= link_to 'テンプレートを投稿する', new_template_path %>
<p>テンプレート検索</p>
<%= form_tag(templates_path, :method => 'get' ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>
<h1>テンプレート一覧</h1>
<div class="collas">
<% @templates.each do |template| %>
<div>
  <%= link_to template, target: "_brank" do %>
    <%= image_tag template.image.to_s %>
    <br><%= template.tag_txt %>
  <% end %>
  <br><%= link_to '削除', template, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
</div>
<div class="pageing">
  <%= paginate @templates %>
</div>
