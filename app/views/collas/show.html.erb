<p id="notice"><%= notice %></p>


<p>
  <strong>Image:</strong>
  <%= image_tag @colla.image.to_s %>
</p>

<p>
  <strong>Tag txt:</strong>
  <%= @colla.tag_txt %>
</p>

<p>
  <strong>Template:</strong>
  <%= @colla.template %>
</p>

<%= form_with url: '/twitter_post_media' do |f| %>
  <%= f.text_area :content, value: "Tweeted from #{request.url}" %>
  <%= f.hidden_field :colla, value: @colla.id %>
  <%= f.submit '画像とともにツイート' %>
<% end %>

<%= link_to 'Edit', edit_colla_path(@colla) %> |
<%= link_to 'Back', collas_path %>
