<meta name="viewport" content="width=device-width, initial-scale=1.0">
<p id="notice"><%= notice %></p>

<h1>コラ画像一覧</h1>

<div class="collas">
<% @collas.each do |colla| %>
<div>
  <%= link_to colla, target: "_brank" do %>
    <%= image_tag colla.image.to_s %>
    <br><%= colla.tag_txt %>
  <% end %>
  <br><%= link_to '削除', colla, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>
</div>

<br>
<%= link_to '新しいコラ画像を追加する', new_colla_path %>
<br>
<%= link_to 'Topページ', root_path %>
